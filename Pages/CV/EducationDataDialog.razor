<MudDialog>
    <DialogContent>
        <MudForm Model="@P_education" OnValidSubmit="@Do">
            <MudTextField Disabled="ReadOnly" T="string" Required="true" RequiredError="Required!" Label="Institute Name" @bind-Value="@P_education.Institute" />
            <MudTextField Disabled="ReadOnly" T="string" Required="true" RequiredError="Required!" Label="Institute Country" @bind-Value="@P_education.InstituteCountry" />
            <MudTextField Disabled="ReadOnly" T="string" Required="true" RequiredError="Required!" Label="Degree" @bind-Value="@P_education.Degree" />
            <MudDatePicker DateFormat="dd/MM/yyyy" Disabled="ReadOnly" Placeholder="Select Date" Editable="true" Required="true" RequiredError="Required!" Label="Start Date" @bind-Date="@StartDate" />
            <MudDatePicker DateFormat="dd/MM/yyyy" MinDate="@StartDate" Disabled="@(P_education.IsCurrent || ReadOnly || StartDate == null)" Placeholder="Select Date" Editable="true" Required="true" RequiredError="Required!" Label="End Date" @bind-Date="@EndDate" />
            <MudSwitch Disabled="ReadOnly" Color="Color.Primary" @bind-Checked="@(P_education.IsCurrent)">Currently working here</MudSwitch>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Do">@Operation</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Education P_education { get; set; } = new Education();
    [Parameter] public string Operation { get; set; } = "";
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public DateTime? StartDate { get; set; }
    [Parameter] public DateTime? EndDate { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Do()
    {
        P_education.StartDate = StartDate;
        if (P_education.IsCurrent)
        {
            P_education.EndDate = null;
        }
        else
        {
            P_education.EndDate = EndDate;
        }
        MudDialog.Close(DialogResult.Ok(P_education));
    }
}

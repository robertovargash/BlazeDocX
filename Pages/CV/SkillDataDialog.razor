<MudDialog>
    <DialogContent>
        <MudForm Model="@P_skill" OnValidSubmit="@Do">
            <MudTextField ReadOnly="ReadOnly" T="string" Required="true" RequiredError="Required!" Label="Tag" @bind-Value="@P_skill.Tag" HelperText="This is for groupping the skills in tag, example Communicative"/>
            <MudTextField ReadOnly="ReadOnly" T="string" Required="true" RequiredError="Required!" Label="Skill" @bind-Value="@P_skill.Name" />
            <MudTextField ReadOnly="ReadOnly" T="string" Required="true" RequiredError="Required!" Label="Description" @bind-Value="@P_skill.Description" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Do">@Operation</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public Skill P_skill { get; set; } = new Skill();
    [Parameter] public string Operation { get; set; } = "";
    [Parameter] public bool ReadOnly { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Do()
    {
        MudDialog.Close(DialogResult.Ok(P_skill));
    }
}
